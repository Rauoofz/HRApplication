@using HRApplication.Data
@model List<Employee>
@{
    ViewData["Title"] = "EmployeeList";
}

<h1>EmployeeList</h1>

@section Body{ 

    <form method="post">
        <div class="row" style="margin-top:20px">

            <div class="col-lg-2">
                <label>Employee Name</label>
            </div>
            <div class="col-lg-4">
                <input type="text" class="form-control" name="Name"/>
            </div>

            <div class="col-lg-2">
                <input type="submit" asp-action="GetEmployee" class="btn btn-primary" value="Search"/>
            </div>

        </div>

        <div class="row" style="margin-top:30px">

            <div class="col-lg-offset-0">

                <table class="table table-bordered">

                    <thead>

                        <tr>
                            <th>Image</th>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Email</th>
                            <th>Option</th>
                        </tr>

                    </thead>

                    <tbody>

                        @foreach(var Employee in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@Employee.Path" style="height:50px"/>
                                    </td>
                                    <td>
                                        @Employee.FirstName
                                    </td>
                                    <td>
                                        @Employee.LastName
                                    </td>
                                    <td>
                                        @Employee.Email
                                    </td>
                                    <td>

                                        <a class="btn-link" asp-action="EditEmployee" asp-route-id="@Employee.ID">Edit </a>
                                        <a class="btn-link" asp-action="DeleteEmployee" asp-route-id="@Employee.ID">Delete </a>

                                    </td>
                                </tr>
                            }

                    </tbody>

                </table>

            </div>

        </div>


    </form>

}

