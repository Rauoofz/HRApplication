@model RoleModel
@{
    ViewData["Title"] = "AddRoles";
}

<h1>AddRoles</h1>

@section Body{ 

    <form method="post">

        <div class="row" style="margin-top:25px">

            <div class="col-lg-1">
                <label asp-for="Name"></label>
            </div>
            <div class="col-lg-4">
                <input asp-for="Name" class="form-control"/>
            </div>

            <div class="col-lg-2">
                <input type="submit" class="btn btn-primary" asp-action="CreateRole" value="CreateRole"/>
            </div>

        </div>

    </form>

}

